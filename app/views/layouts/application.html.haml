!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %title Visa Bulletin Countdown
    %meta{:content => "Elisyam is a Web App and Admin Dashboard Template built with Bootstrap 4", :name => "description"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    / Google Fonts
    %script{:src => "https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"}
    :javascript
      WebFont.load({
        google: {"families":["Montserrat:400,500,600,700","Noto+Sans:400,700"]},
        active: function() {
            sessionStorage.fonts = true;
        }
      });
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
  %body#page-top
    #preloader
      .canvas
        = image_tag 'logo.png', class: 'loader-logo'
        .spinner
    .page
      = render 'layouts/partials/header'
      .page-content.d-flex.align-items-stretch
        = render 'layouts/partials/offcanvas_sidebar'
        = render 'layouts/partials/left_sidebar'
        .content-inner.compact
          = yield
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
